<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".activity.MainActivity"
    android:id="@+id/twoPaneLinearLayout">

    <FrameLayout
        android:id="@+id/movie_list_fragment"
        android:name="me.abhishekraj.showmyshow.fragment.MoviePosterFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/tv_list_fragment"
        android:name="me.abhishekraj.showmyshow.fragment.TvShowsPosterFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/details_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />

</LinearLayout>